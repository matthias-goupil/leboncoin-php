{% extends "base.html.twig" %}

{% block page_title %}Profil{% endblock %}

{% block page_content %}
    <main>
        <a href="{{ route("update_user") }}">Modifier le profil</a>

        <h2>Informations personnelles</h2>
        <div class="info">
            <p>Adresse email :</p>
            <p>{{ user.email }}</p>
        </div>

        <div class="info">
            <p>Prénom :</p>
            <p>{{ user.firstname }}</p>
        </div>

        <div class="info">
            <p>Nom :</p>
            <p>{{ user.lastname }}</p>
        </div>

        <div class="info">
            <p>Numéro de téléphone :</p>
            <p>{{ user.tel }}</p>
        </div>

        <h2>Annonces postées</h2>
        <div id="anouncements-list">
            {% for announcement in user.announcements %}
                <a class="announcement" href="#">
                    <img src="{{ announcement.picture }}" alt=""/>
                    <div>
                        <p class="title">{{ announcement.name }}</p>
                        <p class="price">Price €</p>
                        <div class="adress">
                            <p>{{ announcement.adress }}</p>
                            <p>{{ announcement.city }} {{ announcement.postalcode }}</p>
                        </div>
                    </div>
                </a>
            {% else %}
                <p>Aucune annonce n'a été posté</p>
            {% endfor %}
        </div>
    </main>
{% endblock %}