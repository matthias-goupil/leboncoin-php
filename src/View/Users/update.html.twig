{% extends "base.html.twig" %}

{% block page_title %}Profil{% endblock %}

{% block page_content %}
    <main>
        <h1>Mettre à jour son profil</h1>
        <form action="{{ route("submit_update_user") }}" id="form-access" class="center" method="post"
              enctype="multipart/form-data">
            <div class="access-container">
                <label for="firstname">Prénom</label>
                <p class="help-input-form">Entre 3 et 30 caractères</p>
                <input id="firstname" type="text" name="firstname" value="{{ user.firstname }}" minlength="3" maxlength="30" required/>
            </div>
            <div class="access-container">
                <label for="lastname">Nom</label>
                <p class="help-input-form">Entre 3 et 30 caractères</p>
                <input id="lastname" type="text" name="lastname" value="{{ user.lastname }}" minlength="3" maxlength="30" required/>
            </div>

            <div class="access-container">
                <label for="tel">Numéro de téléphone</label>
                <input id="tel" type="tel" name="tel" value="{{ user.tel }}" required/>
            </div>

            <div class="access-container">
                <label for="password">Mot de passe</label>
                <p class="help-input-form">Entre 8 et 20 caractères, au moins une minuscule, une majuscule et un
                    nombre</p>
                <input id="password" type="password" name="password"
                       pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,20}$"/>
            </div>

            {#            <div class="access-container">#}
            {#                <label for="profile-pic">Photo de profil</label>#}
            {#                <input required type="file" id="profile-pic" name="profilePicture" accept="image/png, image/jpeg">#}
            {#            </div>#}
            <input id="access-submit" type="submit" value="Mettre à jour">
    </main>
{% endblock %}